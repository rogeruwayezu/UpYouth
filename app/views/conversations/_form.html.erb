<div class="container-fluid">
  <div class="row">
    <div class="col-md-8">
      <%= form_for :conversation, url: :conversations, html: { class: "" } do |f| %>
          <div class="form-group">
            <%= f.label :recipients %><br>
            <%= f.select(:recipients, User.all.collect {|p| [ p.full_name, p.id ] }, {}, { multiple: true , id: "event_artist_ids", class: "form-control" })%>
          </div>
          <div class="form-group">
            <%= f.label :subject %>
            <%= f.text_field :subject, placeholder: "Subject", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :message %>
            <%= f.text_area :body, class: 'form-control', style: "width:500px;",placeholder: "Type your message here", rows: 4  %>
          </div>

          <%= f.submit "Send Message", class: "btn btn-success" %>

      <% end %>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>

<script type="text/javascript">
    $( "#event_artist_ids" ).select2();
</script>