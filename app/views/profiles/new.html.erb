<div class="container-fluid">
  <div class="row">
    <div class="col-md-2">
    </div>

    <div class="col-md-8">

      <h4>Create your Profile </h4>      

      <%= form_tag "/profiles", multipart: true, method: :post do %>

        <form>
          
          <input type="hidden" name="user_id"  value="<%= current_user.id %>">

          <div class="form-group">
            <label for="focusedInput">Overview</label>
            <textarea type="text" class="form-control" name="overview" id="focusedInput"  placeholder="Enter your overview"></textarea>
          </div>

          <div class="form-group">
            <%= label_tag :profile_picture %>
            <%= file_field_tag :file %>
          </div>

          <div class="checkbox">
            <input type="submit" name="Submit">
          </div>
        </form>

      <% end %>
    </div>
  </div>
</div>