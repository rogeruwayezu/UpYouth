<div class="container">
  <div class="row">
    <div class="col-md-12">

      <h4>Create your Profile </h4>      

      <%= form_tag "/profiles", method: :post do %>

        <form>
          
          <input type="hidden" name="user_id"  value="<%= current_user.id %>">

          <div class="form-group">
            <label for="focusedInput">Overview</label>
            <textarea type="text" class="form-control" name="overview" id="focusedInput"  placeholder="Enter your overview"></textarea>
          </div>
          <div> 
          <label for="focusedInput">Certifications</label> 
            <input type="text" class="form-control" name="certifications" id="focusedInput"  placeholder="Add your certifications">
          </div>

          <div class="checkbox">
            <input type="submit" name="Submit">
          </div>
        </form>

      <% end %>
    </div>
  </div>
</div>