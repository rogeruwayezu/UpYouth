<div class="container-fluid">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-8">
    <h4>Create your Profile </h4>
      <%= form_for(@profile) do |f| %>
        <% if @profile.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

            <ul>
            <% @profile.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>


        <div class="field">
          <%= f.label :overview %><br>
          <%= f.text_field :overview, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.hidden_field :user_id, :value => current_user.id %>
        </div>
        <br>
        <div class="field">
          <%= f.label :profile_picture %><br>
          <%= f.file_field :profile_picture %>
        </div>

        <br>

        <div class="field" >
          <%= f.label :Choose_your_skills %><br>
          <%= f.select(:skill_ids, Skill.all.collect {|a| [a.name, a.id]}, {}, id: "event_artist_ids", class: 'form-control', :multiple => true)  %>
        </div>

        <div class="field" >
          <%= f.label :Choose_your_categories %><br>
          <%= f.select(:category_ids, Category.all.collect {|a| [a.name, a.id]}, {}, id: "eventartist_ids", class: 'form-control', :multiple => true)  %>
        </div>

        <br>
        <div class="actions">
          <%= f.submit class: "btn btn-default" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<script type="text/javascript">
    $( "#event_artist_ids" ).select2();
    $( "#eventartist_ids" ).select2();
</script>
