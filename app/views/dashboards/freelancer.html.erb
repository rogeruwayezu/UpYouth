<div class="container-fluid">
  <div class="row">

    <div class="col-md-3">
    </div>
      <div class="col-md-6">
        <h4>Jobs Available</h4>       
            <% @posts.each do |post| %>
              <div class="jumbotron" style="text-align: justify;">
                <h5><%= link_to post.title, "/posts/#{post.id}"%></h5>
                <p><%= (raw post.description.truncate(200)) %>
                <%= link_to "| Read More", "/posts/#{post.id}" %></p>
              </div>
              <br>
            <% end %>
      </div>
      <br>
      <div class="col-md-3" style="padding-top: 60px;">
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><%= link_to "My Applications", "/applications", method: :get %> </li>
          <li class="list-group-item"><%= link_to "My Submissions", "/freelancer_submissions", method: :get %></li>
          <li class="list-group-item"><%= link_to "Work Completed", "/work_completed", method: :get %></li>
        </ul>
              
      </div>
    </div>
  </div>
</div>
