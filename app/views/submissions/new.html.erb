<div class="container-fluid" style="padding-top: 30px;">
  <div class="row">
    <div class="col-md-2">
    </div>

    <div class="col-md-8 jumbotron" style="padding-top: 25px;">

      <h4 style="font-family: 'Old Standard TT';"><strong>Submit</strong></h4>      

      <%= form_tag "/submissions", multipart: true, method: :post do %>

        <form>
          
          <input type="hidden" name="user_id"  value="<%= current_user.id %>">
          <input type="hidden" name="post_id"  value="<%= @post.id %>">

          <div class="form-group">
            <label for="focusedInput">Title of the work</label>
            <input type="text" class="form-control" name="title" id="focusedInput"  placeholder="Enter the title">
          </div>

          <input type="hidden" name="user_id"  value="<%= current_user.id %>">
          <div class="form-group">
            <label for="focusedInput">Description</label>
            <input type="text" class="form-control" name="description" id="focusedInput"  placeholder="Enter the description">
          </div>

          

          <div class="form-group">
            <%= label_tag :file %>
            <%= file_field_tag :file %>
          </div>

          <div class="checkbox">
            <input type="submit" class="btn btn-success" style="background-color:#00b3b3"    name="Submit">
          </div>
        
        </form>

      <% end %>
    </div>
  </div>
</div>
