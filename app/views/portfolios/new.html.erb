<div class="container">
  <div class="row">
    <div class="col-md-12">

      <h4>Create your Profile </h4>      

      <%= form_tag "/portfolios", multipart: true, method: :post do %>

        <form>
          
          <input type="hidden" name="user_id"  value="<%= current_user.id %>">
          <input type="hidden" name="category_id"  value="<%= current_user.id %>">

          <div class="form-group">
            <label for="focusedInput">Title</label>
            <textarea type="text" class="form-control" name="title" id="focusedInput"  placeholder="Enter your overview"></textarea>
          </div>
          <div> 
          <label for="focusedInput">Overview</label> 
            <input type="text" class="form-control" name="overview" id="focusedInput"  placeholder="Add your certifications">
          </div>
          <div> 
          <div class="form-group">
            <%= label_tag :file %>
            <%= file_field_tag :file %>
          </div>

           <div class="form-group">
            <label for="focusedInput">Job Category</label>
              <select name="category_id">
              <option value="" disabled selected>Select your category</option>
                <% @categories.each do |category| %>
              <option value="<%= category.id %>"><%= category.name %></option>
                <% end %>
             </select>
          </div>
          
          <div class="checkbox">
            <input type="submit" name="Submit">
          </div>
        </form>

      <% end %>
    </div>
  </div>
</div>
