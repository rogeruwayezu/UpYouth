<div class="container-fluid">
  <div class="row">
    <div class="col-md-2">
    </div>

    <div class="col-md-6">

      <h4>Employment Histories </h4>      

      <%= form_tag "/employment_histories", method: :post do %>

        <form>
          
          <input type="hidden" name="user_id"  value="<%= current_user.id %>">

          <div class="form-group">
            <label for="focusedInput">Company</label>
            <textarea type="text" class="form-control" name="company" id="focusedInput"  placeholder="Enter your overview"></textarea>
          </div>
          <div> 
          <label for="focusedInput">Location</label> 
            <input type="text" class="form-control" name="location" id="focusedInput"  placeholder="Add your certifications">
          </div>
          <div> 
          <label for="focusedInput">Position</label> 
            <input type="text" class="form-control" name="position" id="focusedInput"  placeholder="Add your certifications">
          </div>
          <div> 
          <label for="focusedInput">Role</label> 
            <select name="role">
              <option value="intern">Intern</option>
              <option value="manager">Manager</option>
              <option value="owner">Owner</option>
            </select>
          </div>
          <div> 
          <label for="focusedInput">Responsibilities</label> 
            <input type="text" class="form-control" name="risponsibilities" id="focusedInput"  placeholder="Add your certifications">
          </div>

          <div class="form-group">
            <label for="example-date-input">Period</label>
            <input type="date" class="form-control" name="period" id="example-date-input"  placeholder="Enter the deadline">
          </div>

          <div class="checkbox">
            <input type="submit" name="Submit">
          </div>
        </form>

      <% end %>
    </div>
  </div>
</div>