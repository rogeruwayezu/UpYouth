 <div class="container-fluid" style="background-color: #f5f5f0;">
   <div class="row"> 
     <div class="col-md-2"> 
     </div>     

      <div class="col-md-8" style="text-align: justify;">
      <h5><%= @post.title %></h5>
        <p><strong>Category</strong>:<%= @post.category.name %> </p>
        <p><strong>Description</strong>:<%= raw(@post.description) %></p>
        <p><strong>Job Budget</strong>:$<%= @post.budget %></p>
        <p><strong>Required Skills</strong>:<%= @post.skills %></p>
        <p><strong>Deadline</strong>: <%= @post.deadline %></p>


      <% if current_user %>
        <%= form_tag "/applications/new?post_id=#{@post.id} ", method: :get do %>
          <input type="hidden" name="post_id" class="form_control" value="<%= @post.id %>">
        <%= button_to "Apply Now" %>
        <% end %>
      <% else %>
        <h4> You need to create an account in order to apply for this job</h4>
      <% end %>


    </div>
  </div>
</div>