<h3 style="text-align: center"> Setting </h3>
<div class="container fluid">
  <div class="row">
    <div class="col-md-2">
    <%= button_to "Delete", "/posts/#{@post.id}", class: "btn btn-danger", method: :delete, data: { confirm: 'are you sure?' } %>
    </div>
    

    <div class="col-md-10">
        <h5> Edit </h5> 
      <%= form_for(@post) do |f| %>
      
        <div class="field">
          <%= f.label :title %><br>
          <%= f.text_field :title, class: 'form-control' %>
        </div>

        <div class="field" >
          <%= f.label :Choose_your_categories %><br>
          <%= f.select(:category_ids, Category.all.collect {|a| [a.name, a.id]}, {}, id: "eventartist_ids", class: 'form-control', :multiple => true)  %>
        </div>

        <div class="field">
          <%= f.label :description %><br>
          <%= f.text_field :description, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :budget %><br>
          <%= f.text_field :budget, class: 'form-control' %>
        </div>
       
        <br>
        <div class="field" >
          <%= f.label :Required_Skills %><br>
          <%= f.select(:skill_ids, Skill.all.collect {|a| [a.name, a.id]}, {}, id: "event_artist_ids", class: 'form-control', :multiple => true)  %>
        </div>

        <div class="field">
          <%= f.label :deadline %> <%= f.date_select(:deadline, :order => [:month, :day, :year]) %>
        </div>

        <br>
        <div class="actions">
          <%= f.submit class: "btn btn-default" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<script type="text/javascript">
    $( "#event_artist_ids" ).select2();
    $( "#eventartist_ids" ).select2();
</script>




