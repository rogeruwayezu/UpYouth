<div class="container">
  <div class="row">
    <h3 style="text-align: center"> Setting </h3>

    
    <%= button_to "Delete", "/posts/#{@post.id}", class: "btn btn-danger", method: :delete, data: { confirm: 'are you sure?' } %>
    

    <div class="col-md-10">

        

        <h5> Edit </h5> 
        <%= form_tag "/posts/#{@post.id}", method: :patch do%>

        <script src="//cdn.ckeditor.com/4.6.2/standard/ckeditor.js"></script>

        <form>   
           <div class="form-group">
            <label for="focusedInput">Title of the Job</label>
            <input type="text" class="form-control" name="title" id="focusedInput"  value="<%= @post.title %>">
          </div>
          
           <div class="form-group">
            <label for="focusedInput">Job Category</label>
              <select name="category_id">
              <option  disabled selected><%= @post.category.name %></option>
                <% @categories.each do |category| %>
              <option value="<%= category.id %>"><%= category.name %></option>
                <% end %>
             </select>
          </div>

          
          <div class="form-group">
            <label>Job Description</label>
            <textarea name="description"><%= @post.description%></textarea>
              <script>
                  CKEDITOR.replace( 'description' );
              </script>
          </div>
        

          <div class="form-group">
            <label for="focusedInput">Budget</label>
            <input type="text" class="form-control" id="focusedInput" name="budget" value="<%= @post.budget %>">
          </div>

          <div class="form-group">
            <label for="focusedInput">Required Skills</label>
            <textarea class="form-control" name="skills" id="focusedInput" rows="3"><%= @post.skills %></textarea>
          </div>

          <div class="form-group">
            <label for="example-date-input">Deadline</label>
            <input type="date" class="form-control" name="deadline" id="example-date-input"  value="<%= @post.deadline %>">
          </div>

          <div class="checkbox">
            <input type="submit" class="btn btn-primary active" name="Edit Job Post">
          </div>

        </form>
        <% end %>
      </div>
    </div>
  </div>
         